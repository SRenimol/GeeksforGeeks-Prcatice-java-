import java.util.*;
class Solution {
    // Function to find equilibrium point in the array.
    public static int findEquilibrium(int arr[]) {
        // code here
        int n=arr.length;
        int totalsum=0;
        int leftsum=0;
        
        for(int i=0;i<n;i++){
            totalsum+=arr[i];
        }
        for(int i=0;i<n;i++){
            totalsum-=arr[i];
            if(totalsum==leftsum){
                return i;
            }
            leftsum+=arr[i];
        }
        return-1;
        
        
    }
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int arr[]=new int[n];
        for(int i=0;i<n;i++) arr[i]=sc.nextInt();
        
        Solution sol=new Solution();
        int output=sol.findEquilibrium(arr);
    }
}
